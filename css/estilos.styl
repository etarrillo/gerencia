body
	background-color #ededed

// from http://nicolasgallagher.com/micro-clearfix-hack/
.clearfix
	zoom 1
	&:after
	&:before
		content ""
		display table
	&:after
		clear both

.side-left
	float left 

.side-right
	float right 


header
	width 98%
	padding 1%
	height 150px
	background-color #000000
footer
	margin-top 1%
	width 100%
	background-color #232323

.container
	margin 0 auto
	width 90%
	height 100%
	background-color #0000ff

	// BLOQUE ARRIB
	#bloque-up
		background-color white
		margin-bottom 20px

		section#main-title
			width 40%
			background-color orange
			// float left

		section#main-img
			width 40%
			background-color olive
			// float right
			img
				width 100%
				height auto

	// BLOQUE DEBAJO

	#bloque-down
		height auto
		background-color red
		img
			float left
			margin 1%
			width 25%
			height auto
		p
			float right
			width 70%
			color #ffffff
			font-size 20px

	#enlaces
		nav
			background-color gray
			width 100%
			ul
				width 50%
				float right
				background-color black
				text-align right
				margin 0
				padding 0
				font-size 0
				li
					display inline-block
					a
						display inline-block
						font-size 15px
						padding 15px 25px
						border 1px solid white
						color red;
						&:hover
							background-color white
							color red